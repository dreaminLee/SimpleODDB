CREATE CLASS stu_ (
	name CHAR(10),
	gender CHAR(1),
	age INT,
	stuid INT,
	isgraduate BOOLEAN,
	testfloat FLOAT
);

INSERT INTO stu_ VALUES ('abc', 'M', 20, 2016300000, TRUE, 3.1415);

CREATE SELECTDEPUTY graduate
SELECT name AS name,
       gender AS gender,
       age AS age
FROM stu_
WHERE isgraduate = TRUE;

CREATE SELECTDEPUTY undergraduate
SELECT name AS name,
       gender AS gender,
       age AS age
FROM stu_
WHERE isgraduate = FALSE;

DROP CLASS stu_;

